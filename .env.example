# Server Configuration
PORT=8080
GO_ENV=production
SERVICE_NAME=konvoq-backend

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=auth_db
DB_USER=postgres
DB_PASSWORD=your_db_password
# Or use a full DSN (overrides individual DB_* vars):
# DATABASE_URL=postgres://user:password@host:5432/dbname?sslmode=disable

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
# Cache-specific Redis (falls back to REDIS_HOST/PORT/PASSWORD if not set)
REDIS_CACHE_HOST=localhost
REDIS_CACHE_PORT=6379
REDIS_CACHE_PASSWORD=

# JWT / Auth Secrets
JWT_SECRET=your-32-char-jwt-secret
JWT_REFRESH_SECRET=your-32-char-refresh-secret
ADMIN_JWT_SECRET=your-32-char-admin-jwt-secret
COOKIE_SECRET=your-32-char-cookie-secret

# Token Expiry
ACCESS_TOKEN_EXPIRY_MINUTES=15
REFRESH_TOKEN_EXPIRY_DAYS=7
VERIFICATION_CODE_EXPIRY_MINUTES=10
MAX_VERIFICATION_ATTEMPTS=5

# Admin Credentials
ADMIN_EMAIL=admin@witzo.local
ADMIN_PASSWORD=change-me-admin-password

# Database Migrations
AUTO_MIGRATE=true

# Email Configuration (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password
EMAIL_FROM=noreply@witzo.ai
# Optional alias: EMAIL_FROM_ADDRESS=noreply@witzo.ai

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4o-mini

# Pinecone Configuration
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX_NAME=website-scraper

# Background Workers
ANALYTICS_FLUSH_INTERVAL_SEC=60
WEBHOOK_PROCESS_INTERVAL_SEC=30
